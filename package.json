  "license": "MIT",
  "scripts": {
    "emails:dev": "cd ./libs/shared/mailer/src/lib && email dev",
    "dev": "pnpm run db:dockers:dev && pnpm run db:migrate:dev && nx run-many --target=serve --projects=api,web",
    "---- DB SECTION ----": "----------------------------",
    "db:dockers:dev": "docker-compose -f tools/env/dev.docker-compose.yaml up -d --no-recreate --remove-orphans",
    "db:migrate:dev": "pnpm dlx env-cmd -f .env pnpm dlx prisma migrate dev && prisma generate",
    "db:seed:dev": "pnpm dlx env-cmd -f .env ts-node --project tools/tsconfig.tools.json tools/seeder/seed.dev.ts",
    "db:studio": "pnpm dlx env-cmd -f .env pnpm dlx prisma studio",
    "db:db-push": "pnpm dlx env-cmd -f .env prisma db push --accept-data-loss",
    "---- VALIDATE ENV SECTION ----": "--------------------------------",
    "validate:web-env": "pnpm dlx nx run web-utils-env:validate",
    "validate:admin-env": "pnpm dlx nx run web-utils-env-admin:validate",
    "---- TOOLS SECTION ----": "-------------------------",
    "verify": "nx format:write && nx format:check && nx affected --target=lint --fix --parallel=3 && nx affected --target=build --parallel=3 --exclude=web",
    "stripe:listen": "stripe listen --forward-to localhost:4200/api/fulfilled",
    "---- DEPLOY SECTION ----": "------------------------",
    "cd:web": "pnpm run validate:web-env && prisma generate && prisma migrate deploy && pnpm run cd:db-seed && pnpm dlx nx build web --prod",
    "cd:admin": "pnpm run validate:admin-env && prisma migrate && prisma generate && pnpm run cd:db-seed && pnpm dlx nx build admin --prod",
    "---- NX SECTION ----": "------------------------",
    "clear": "rm -rf node_modules/.cache/nx && pnpm run reset",
    "graph": "nx graph",
    "reset": "nx reset",
    "fix:nx": "rm -rf node_modules/.cache/nx && rm -rf .nx/cache && nx reset && nx graph --file=graph.html && nx run-many --target=build --projects=database,utils",
    "dev:fixed": "pnpm run fix:nx && nx run-many --target=serve --projects=api,web",
    "rebuild:graph": "nx reset && nx graph --file=graph.html && nx run-many --target=build --projects=database,utils"
  },
